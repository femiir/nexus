# =============================================================================
# Next.js Application Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - only commit .env.example
# =============================================================================

# Application URL
# For local development: http://localhost:3000
# For production: https://nexus.femiir.dev (or your chosen subdomain)
NEXT_PUBLIC_BASE_URL=https://nexus.femiir.dev

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# MongoDB Database (MongoDB Atlas or self-hosted)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=your-app
MONGODB_USERNAME=your_username
MONGODB_PASSWORD=your_password
MONGODB_CLUSTER=your-cluster.mongodb.net
MONGODB_APP_NAME=your-app-name

# Cloudinary (Image Storage & CDN)
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Optional: Node Environment (automatically set in Docker)
# NODE_ENV=production
